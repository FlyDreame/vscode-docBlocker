{
    "name": "docblocker",
    "displayName": "docBlocker",
    "description": "Adds simple comments to any place",
    "version": "0.2.0",
    "publisher": "flydreame",
    "engines": {
        "vscode": "^1.17.0"
    },
    "icon": "images/icon.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.docblocker"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "docBlocker Configuration",
            "properties": {
                "docBlocker.Author": {
                    "type": "string",
                    "default": "flydreame",
                    "description": "By default, create blocker username"
                }, 
                "docBlocker.tpl": {
                    "type": "string",
                    "default": "/** \n * @Author: ${author} \n * @Date: ${createTime} \n * @Desc: \n */",
                    "description": "By default, create blocker template"
                }
            }
        },
        "commands": [
            {
                "command": "extension.docblocker",
                "title": "docblocker"
            }
        ],
        "keybindings": [
            {
                "command": "extension.docblocker",
                "key": "ctrl+shift+/",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "indent-string": "^3.2.0"
    }
}
